# Precious Vault Production Environment Variables
# Map these in the Coolify "Environment Variables" section

# --- Coolify Specific (Derive from these) ---
# SERVICE_FQDN_BACKEND=precious-vault-api.mawuvision.com
# SERVICE_FQDN_FRONTEND=precious-vault.mawuvision.com
# SERVICE_URL_BACKEND=https://precious-vault-api.mawuvision.com
# SERVICE_URL_FRONTEND=https://precious-vault.mawuvision.com

# --- Django Settings ---
DEBUG=False
SECRET_KEY=generate-a-secure-secret-key-at-least-50-chars
ALLOWED_HOSTS=precious-vault-api.mawuvision.com,backend

# --- Database (Postgres) ---
DB_ENGINE=django.db.backends.postgresql
DB_NAME=precious_vault
DB_USER=postgres
DB_PASSWORD=set-a-strong-password-in-coolify
DB_HOST=postgres
DB_PORT=5432

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Celery ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Channels ---
CHANNEL_LAYERS_HOST=redis://redis:6379/1

# --- CORS ---
CORS_ALLOWED_ORIGINS=https://precious-vault.mawuvision.com

# --- CSRF ---
# Note: Should include the full URL with protocol (https://...)
CSRF_TRUSTED_ORIGINS=https://precious-vault.mawuvision.com,https://precious-vault-api.mawuvision.com

# --- Frontend ---
VITE_API_URL=https://precious-vault-api.mawuvision.com/api
VITE_WS_URL=wss://precious-vault-api.mawuvision.com/ws

# --- Email ---
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# --- External APIs ---
METAL_PRICE_API_KEY=
METAL_PRICE_API_URL=https://api.metalpriceapi.com/v1/latest
