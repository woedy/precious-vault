# Precious Vault Production Environment Variables
# Copy this to .env.prod on Coolify

# --- Django Settings ---
DEBUG=False
SECRET_KEY=generate-a-secure-secret-key-for-production
ALLOWED_HOSTS=your-production-domain.com,backend,frontend

# --- Database (Postgres) ---
DB_ENGINE=django.db.backends.postgresql
DB_NAME=precious_vault
DB_USER=postgres
DB_PASSWORD=change-me-to-a-secure-password
DB_HOST=postgres
DB_PORT=5432

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Celery ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Channels ---
CHANNEL_LAYERS_HOST=redis://redis:6379/1

# --- CORS ---
CORS_ALLOWED_ORIGINS=https://your-production-domain.com

# --- Frontend ---
VITE_API_URL=https://your-production-domain.com/api
VITE_WS_URL=wss://your-production-domain.com/ws

# --- Email (Example) ---
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# --- External APIs ---
METAL_PRICE_API_KEY=your-api-key
METAL_PRICE_API_URL=https://api.metalpriceapi.com/v1/latest
